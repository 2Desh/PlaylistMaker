<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ФОН -->
    <!-- КНОПКИ -->
    <style name="TittleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginHorizontal">@dimen/default_padding</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">22sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsButton">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <!-- переключатель -->
        <item name="trackTint">@color/YP_Blue_Light</item>
        <item name="thumbTint">@color/YP_Blue</item>
    </style>

    <!-- СТРОКА ПОИСКА -->
    <style name="SearchBarEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:backgroundTint">@color/YP_Black</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">@color/YP_Black</item>
    </style>

    <style name="SearchButton" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/util_rounded_corners</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Black</item>

    </style>

    <style name="SearchBarIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/YP_Black</item>
        <item name="android:drawableTint">@color/YP_Black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/YP_White</item>
    </style>

</resources>
